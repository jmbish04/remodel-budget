{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["@cloudflare/workers-types/2024-09-23"],
    "lib": ["DOM", "DOM.Iterable", "ES2022"]
  },
  "include": ["app", "remix.env.d.ts", "vite.config.ts"]
}
